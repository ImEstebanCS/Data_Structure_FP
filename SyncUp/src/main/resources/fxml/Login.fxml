<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.syncup.view.controllers.LoginViewController"
            prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #121212;">

    <center>
        <VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: #121212;">
            <padding>
                <Insets bottom="50" left="50" right="50" top="50"/>
            </padding>

            <Label text="SyncUp" style="-fx-text-fill: #1DB954; -fx-font-weight: bold;">
                <font>
                    <Font size="56.0"/>
                </font>
            </Label>

            <Label text="Plataforma de Música Social" style="-fx-text-fill: #B3B3B3;">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>

            <Region prefHeight="20.0"/>

            <VBox alignment="CENTER" spacing="15.0" maxWidth="400.0">

                <HBox alignment="CENTER" spacing="10.0">
                    <Label text="Tipo:" style="-fx-text-fill: #FFFFFF;" prefWidth="120.0"/>
                    <ComboBox fx:id="tipoUsuarioCombo" prefWidth="250.0"
                              style="-fx-background-color: #282828; -fx-text-fill: #FFFFFF;"/>
                </HBox>

                <HBox alignment="CENTER" spacing="10.0">
                    <Label text="Usuario:" style="-fx-text-fill: #FFFFFF;" prefWidth="120.0"/>
                    <TextField fx:id="usuarioField" prefWidth="250.0" promptText="Ingresa tu usuario"
                               style="-fx-background-color: #282828; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #B3B3B3;"/>
                </HBox>

                <HBox alignment="CENTER" spacing="10.0">
                    <Label text="Contraseña:" style="-fx-text-fill: #FFFFFF;" prefWidth="120.0"/>
                    <PasswordField fx:id="passwordField" prefWidth="250.0" promptText="Ingresa tu contraseña"
                                   style="-fx-background-color: #282828; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #B3B3B3;"/>
                </HBox>

                <HBox alignment="CENTER" spacing="15.0">
                    <Button fx:id="loginButton" text="Iniciar Sesión" onAction="#manejarLogin"
                            prefWidth="150.0" prefHeight="40.0"
                            style="-fx-background-color: #1DB954; -fx-text-fill: #FFFFFF; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20;"/>
                    <Button fx:id="registerButton" text="Registrarse" onAction="#manejarRegistro"
                            prefWidth="150.0" prefHeight="40.0"
                            style="-fx-background-color: transparent; -fx-border-color: #FFFFFF; -fx-border-width: 2; -fx-text-fill: #FFFFFF; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-border-radius: 20;"/>
                </HBox>

                <Label fx:id="errorLabel" textFill="#FF4444" wrapText="true" textAlignment="CENTER">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Label>

            </VBox>

        </VBox>
    </center>

</BorderPane>