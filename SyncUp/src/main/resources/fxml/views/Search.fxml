    </VBox>

    <!-- Resultados -->
    <VBox spacing="15.0">
        <Label fx:id="resultadosLabel"
               style="-fx-text-fill: #B3B3B3; -fx-font-size: 14px;"/>

        <ScrollPane fitToWidth="true" style="-fx-background: #121212; -fx-background-color: #121212;">
            <FlowPane fx:id="resultadosPane" hgap="15.0" vgap="15.0"
                      style="-fx-background-color: #121212;">
                <!-- Cards de resultados se agregan dinÃ¡micamente -->
            </FlowPane>
        </ScrollPane>
    </VBox>

</VBox>
