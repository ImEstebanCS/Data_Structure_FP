<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.syncup.view.controllers.ProfileViewController"
      spacing="30.0" style="-fx-background-color: #121212;" alignment="CENTER">
    <padding><Insets top="50" right="50" bottom="50" left="50"/></padding>
    
    <Label text="游녻" style="-fx-font-size: 80px;"/>
    
    <VBox spacing="15.0" alignment="CENTER">
        <Label fx:id="usernameLabel" text="@username" style="-fx-text-fill: #1DB954; -fx-font-size: 24px; -fx-font-weight: bold;"/>
    </VBox>
    
    <Separator style="-fx-background-color: #282828;"/>
    
    <!-- RF-002: Formulario de edici칩n de perfil -->
    <VBox spacing="15.0" prefWidth="400.0" style="-fx-background-color: #181818; -fx-background-radius: 10; -fx-padding: 25;">
        <Label text="Editar Perfil" style="-fx-text-fill: #FFFFFF; -fx-font-size: 20px; -fx-font-weight: bold;"/>
        
        <VBox spacing="10.0">
            <Label text="Nombre:" style="-fx-text-fill: #B3B3B3; -fx-font-size: 14px;"/>
            <TextField fx:id="nombreField" promptText="Nombre completo"
                       style="-fx-background-color: #282828; -fx-text-fill: #FFFFFF; -fx-background-radius: 5;"/>
            
            <Label text="Contrase침a:" style="-fx-text-fill: #B3B3B3; -fx-font-size: 14px;"/>
            <PasswordField fx:id="passwordField" promptText="Nueva contrase침a"
                         style="-fx-background-color: #282828; -fx-text-fill: #FFFFFF; -fx-background-radius: 5;"/>
            
            <Label text="Confirmar Contrase침a:" style="-fx-text-fill: #B3B3B3; -fx-font-size: 14px;"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirmar nueva contrase침a"
                         style="-fx-background-color: #282828; -fx-text-fill: #FFFFFF; -fx-background-radius: 5;"/>
        </VBox>
        
        <Button text="游 Guardar Cambios" onAction="#guardarCambios"
                prefWidth="200.0" prefHeight="40.0"
                style="-fx-background-color: #1DB954; -fx-text-fill: #FFFFFF; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
        
        <Label fx:id="mensajeLabel" text="" style="-fx-text-fill: #1DB954; -fx-font-size: 12px;"/>
    </VBox>
    
    <Separator style="-fx-background-color: #282828;"/>
    
    <VBox spacing="10.0" alignment="CENTER">
        <Label fx:id="favoritosLabel" text="0 canciones favoritas" style="-fx-text-fill: #B3B3B3; -fx-font-size: 16px;"/>
        <Label fx:id="seguidoresLabel" text="0 seguidores" style="-fx-text-fill: #B3B3B3; -fx-font-size: 16px;"/>
        <Label fx:id="siguiendoLabel" text="0 siguiendo" style="-fx-text-fill: #B3B3B3; -fx-font-size: 16px;"/>
    </VBox>
</VBox>
