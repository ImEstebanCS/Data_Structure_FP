                <Label fx:id="mensajeLabel" style="-fx-font-size: 14px;" />

                <Button onAction="#guardarCambios" prefHeight="50" prefWidth="220" style="-fx-background-color: #1DB954; -fx-text-fill: white;                                -fx-font-size: 16px; -fx-font-weight: bold;                                -fx-background-radius: 25; -fx-cursor: hand;                                -fx-effect: dropshadow(gaussian, rgba(29, 185, 84, 0.6), 10, 0.5, 0, 0);" text="ðŸ’¾ Guardar Cambios" />
