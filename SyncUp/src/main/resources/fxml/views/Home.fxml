<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           style="-fx-background-color: transparent;">

    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
        <VBox spacing="30" style="-fx-padding: 30;">

            <!-- Bienvenida -->
            <Label fx:id="welcomeLabel" text="Bienvenido"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;"/>

            <!-- Escuchado Recientemente -->
            <VBox spacing="15">
                <Label text="Escuchado recientemente"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;"/>
                <FlowPane fx:id="recentSongsPane" hgap="20" vgap="20" prefWrapLength="1000"/>
            </VBox>

            <!-- Para Ti (Recomendaciones) -->
            <VBox spacing="15">
                <Label text="Para ti"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;"/>
                <FlowPane fx:id="recommendationsPane" hgap="20" vgap="20" prefWrapLength="1000"/>
            </VBox>
        </VBox>
    </ScrollPane>
</StackPane>