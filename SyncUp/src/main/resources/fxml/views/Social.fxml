<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">

    <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
        <VBox spacing="30" style="-fx-padding: 30;">

            <Label text="Red Social"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;"/>

            <!-- Tus EstadÃ­sticas -->
            <HBox spacing="30" alignment="CENTER">
                <VBox alignment="CENTER" spacing="10" prefWidth="200"
                      style="-fx-background-color: rgba(24, 24, 24, 0.95); -fx-background-radius: 15; -fx-padding: 30;">
                    <Label fx:id="seguidoresLabel" text="0"
                           style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #1DB954;"/>
                    <Label text="Seguidores" style="-fx-text-fill: #B3B3B3; -fx-font-size: 16px;"/>
                </VBox>

                <VBox alignment="CENTER" spacing="10" prefWidth="200"
                      style="-fx-background-color: rgba(24, 24, 24, 0.95); -fx-background-radius: 15; -fx-padding: 30;">
                    <Label fx:id="siguiendoLabel" text="0"
                           style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #1DB954;"/>
                    <Label text="Siguiendo" style="-fx-text-fill: #B3B3B3; -fx-font-size: 16px;"/>
                </VBox>
            </HBox>

            <!-- Sugerencias de Usuarios -->
            <VBox spacing="15">
                <Label fx:id="sugerenciasLabel" text="Sugerencias de Usuarios"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;"/>
                <VBox fx:id="sugerenciasContainer" spacing="15"/>
            </VBox>

            <!-- Siguiendo -->
            <VBox spacing="15">
                <Label fx:id="siguiendoTituloLabel" text="Siguiendo"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;"/>
                <VBox fx:id="siguiendoContainer" spacing="15"/>
            </VBox>
        </VBox>
    </ScrollPane>
</StackPane>